{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Order request schema",
  "additionalProperties": false,
  "required": [
    "id",
    "fromContact",
    "toContact",
    "packages"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "Order ID",
      "minLength": 1,
      "examples": [
        "abcd"
      ]
    },
    "fromContact": {
      "$ref": "#/definitions/Contact"
    },
    "toContact": {
      "$ref": "#/definitions/Contact"
    },
    "packages": {
      "$id": "#/properties/packages",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Package"
      }
    }
  },
  "definitions": {
    "Bank": {
      "$id": "#/definitions/Bank",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "number",
        "name"
      ],
      "properties": {
        "number": {
          "$id": "#/properties/number",
          "title": "Bank number",
          "type": "integer"
        },
        "name": {
          "$id": "#/properties/name",
          "title": "Bank name",
          "type": "string"
        },
        "description": {
          "$id": "#/properties/description",
          "title": "Description",
          "type": "string"
        }
      }
    },
    "Package": {
      "$id": "#/definitions/Package",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "weight": {
          "$id": "#/properties/weight",
          "title": "Weight",
          "type": "integer"
        },
        "width": {
          "$id": "#/properties/width",
          "title": "Width",
          "type": "integer"
        },
        "height": {
          "$id": "#/properties/height",
          "title": "Height",
          "type": "integer"
        }
      }
    },
    "Contact": {
      "$id": "#/definitions/Contact",
      "type": "object",
      "title": "Contact definition",
      "additionalProperties": false,
      "required": [
        "firstname",
        "surname",
        "bank"
      ],
      "properties": {
        "firstname": {
          "$id": "#/properties/firstname",
          "type": "string",
          "minLength": 1,
          "title": "Firstname"
        },
        "surname": {
          "$id": "#/properties/surname",
          "type": "string",
          "minLength": 1,
          "title": "Surname"
        },
        "bank": {
          "$ref": "#/definitions/Bank"
        }
      }
    }
  }
}
