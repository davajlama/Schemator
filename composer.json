{
    "name": "david/validator",
    "autoload": {
        "psr-4": {
            "Davajlama\\Schemator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Davajlama\\Schemator\\Tests\\": "tests/",
            "Davajlama\\Schemator\\Examples\\": "examples/"
        }
    },
    "authors": [
        {
            "name": "David Bittner",
            "email": "bittner@zaslat.cz"
        }
    ],
    "require": {
        "php": "~8.1.0",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-strict-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.0",
        "slevomat/coding-standard": "^7.2"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "check": [
            "./vendor/bin/phpcbf",
            "./vendor/bin/phpunit",
            "./vendor/bin/phpcs",
            "./vendor/bin/phpstan"
        ],
        "test": [
            "./vendor/bin/phpunit"
        ]
    }
}
